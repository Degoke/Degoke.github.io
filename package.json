{
  "name": "portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && npm run build:css && vite build",
    "preview": "vite preview",
    "build:css:dev": "npx tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/main.css --watch",
    "build:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/main.css --minify",
    "format": "npx prettier src/*/**.ts --write"
  },
  "devDependencies": {
    "prettier": "3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
